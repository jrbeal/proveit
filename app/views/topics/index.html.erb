<p id="notice"><%= notice %></p>

<h1>Listing Topics</h1>

<table>
  <thead>
    <tr>
      <th>Topic</th>
      <th>Private</th>
      <th>Lone wolf</th>
      <th>Teams</th>
      <th>Public viewing</th>
      <th>Public comments</th>
      <th>Post</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @topics.each do |topic| %>
      <tr>
        <td><%= topic.topic_id %></td>
        <td><%= topic.private %></td>
        <td><%= topic.lone_wolf %></td>
        <td><%= topic.teams %></td>
        <td><%= topic.public_viewing %></td>
        <td><%= topic.public_comments %></td>
        <td><%= topic.post_id %></td>
        <td><%= link_to 'Show', topic %></td>
        <td><%= link_to 'Edit', edit_topic_path(topic) %></td>
        <td><%= link_to 'Destroy', topic, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


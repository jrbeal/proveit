<p id="notice"><%= notice %></p>

<h1>ProveIt!</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <div>
    <span>
    <%= 'Create: ' %>
    </span>
    <span>
    <%= link_to 'Opinion', new_post_path %>
    </span>
    <span>
    <%= link_to 'Initiator', "." %>
    </span>
    <span>
    <%= link_to 'Comment', "." %>
    </span>
    </div>
    <% @posts.each do |post| %>
      <tr>
        <td><%= link_to post.message, post %></td>
        <td><%= post.status %></td>
        <td><%= post.children %></td>
        <td><%= post.offspring %></td>
        <td><%#link_to 'Show', post %></td>
        <td><%#link_to 'Edit', edit_post_path(post) %></td>
        <td><%#link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

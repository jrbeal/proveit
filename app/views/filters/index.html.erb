<p id="notice"><%= notice %></p>

<h1>Listing Filters</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Contested opinions</th>
      <th>Uncontested opinions</th>
      <th>Contested objections</th>
      <th>Uncontested objections</th>
      <th>Comments</th>
      <th>Initiators</th>
      <th>Following</th>
      <th>Active</th>
      <th>Bookmarks</th>
      <th>Hot topics</th>
      <th>Categories</th>
      <th>Key words</th>
      <th>Levels</th>
      <th>Range</th>
      <th>Today</th>
      <th>Last week</th>
      <th>Last month</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @filters.each do |filter| %>
      <tr>
        <td><%= filter.name %></td>
        <td><%= filter.contested_opinions %></td>
        <td><%= filter.uncontested_opinions %></td>
        <td><%= filter.contested_objections %></td>
        <td><%= filter.uncontested_objections %></td>
        <td><%= filter.comments %></td>
        <td><%= filter.initiators %></td>
        <td><%= filter.following %></td>
        <td><%= filter.active %></td>
        <td><%= filter.bookmarks %></td>
        <td><%= filter.hot_topics %></td>
        <td><%= filter.categories %></td>
        <td><%= filter.key_words %></td>
        <td><%= filter.levels %></td>
        <td><%= filter.range %></td>
        <td><%= filter.today %></td>
        <td><%= filter.last_week %></td>
        <td><%= filter.last_month %></td>
        <td><%= link_to 'Show', filter %></td>
        <td><%= link_to 'Edit', edit_filter_path(filter) %></td>
        <td><%= link_to 'Destroy', filter, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


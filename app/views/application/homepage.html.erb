<html xmlns="http://www.w3.org/1999/html">

    <body>
        <div style="margin-top: 20px; margin-left: 150px; margin-right: 150px">
          <div style="margin-left: 10px; margin-right: 10px">
            <%= link_to 'Create', posts_new_path %>
            <span class="moreless">
             <%= link_to 'Refresh(0)', '.'%>
             <%= link_to 'More', '.' %>
             <%= link_to 'Less', '.' %>
            </span>
          </div>

          <div style="margin-top: 10px;">
            <% @posts.each do |post| %>
              <% user = post.user:quietly %>
              <div id=post class="<%= status_color(post) %>">
                <div>
                  <%= user.first_name %>
                  <%= user.last_name %> @
                  <%= user.user_name %>,
                     <%= user.rating.round(2) %>,
                     <%= link_to 'Follow', '.' %>
                   <span class="right"><%= post.created_at.strftime("%c") %></span>
                </div>
                <div>
                  <em><span style="font-size: 12px;"><%= link_to post.message,post %></span></em>
                  <span class="moreless"><%= link_to 'More', "."%> <%= link_to 'Less', '.' %></span>
                </div>
                <div>
                  <%= offspring(post) %>
                  <%= post.views %> views,
                  <%= post.points %> points,
                  <%= level(post) %>
                  <%= link_to 'Bookmark', '.' %>
                  <span class="right"><%= post.updated_at.strftime("%c") %></span>
                </div>
              </div>
             <% end %>
          </div>
        </div>
    </body>
</html>
